.thanks-section
  display: flex
  flex-direction: column
  justify-content center
  align-items: center
  height: 100%

  &__container
    padding 0 15px
    max-width: 308px
    margin: 0 auto
    text-align: center
    +above($breakpoints.sm)
      max-width: 700px
    +above($breakpoints.md)
      max-width: 900px
    +above($breakpoints.xxl)
      max-width: 1100px

  &__inner-text
    padding: 20px 0 40px 0

  &__container a
    max-width 280px
    margin: 0 auto
    +above($breakpoints.sm)
      max-width 300px
    +above($breakpoints.md)
      max-width 350px
    +above($breakpoints.xxl)
      max-width 390px

.thanks-page
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #011D1F

.wrapper-header-thanks
  padding 10px 0
  +above($breakpoints.sm)
    padding 15px 0
  +above($breakpoints.md)
    padding 20px 0
  +above($breakpoints.xxl)
    padding 25px 0
