.header
  &__container
    display: flex
    justify-content space-between
    align-items: center

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 20px
    +above($breakpoints.md)
      gap: 30px
    +above($breakpoints.xxl)
      gap: 41px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      margin-bottom 5px
    +above($breakpoints.sm)
      margin-bottom 10px
    +above($breakpoints.xxl)
      margin-bottom 15px

  &__logo
    width 100px
    height: 75px
    +above($breakpoints.sm)
      width 127px
      height: 95px
    +above($breakpoints.md)
      width 180px
      height: 135px
    +above($breakpoints.xxl)
      width 247px
      height: 185px

  &__connection
    display: flex
    flex-direction: column
    align-items: flex-end

  &__connection-phone
    display: flex
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__connection-icon
    width 14px
    height: 13px
    fill: #fff
    +above($breakpoints.sm)
      width 15px
      height: 14px
    +above($breakpoints.md)
      width 18px
      height: 17px
    +above($breakpoints.xxl)
      width 20px
      height: 19px

  &__call-me
    cursor pointer
    color: $color-g-light
