.footer
  background-color: #fff

  &__container
    display: flex
    align-items: center
    flex-direction: column
    gap: 10px
    padding 10px 0
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between
      padding 15px 0
    +above($breakpoints.md)
      padding 20px 0
    +above($breakpoints.xxl)
      padding 23px 0 24px

  &__brand
    display: none
    color: #01060C
    +above($breakpoints.sm)
      flex-basis: 35%
      display: flex
      flex-direction: column
      gap: 5px

  &__logo
    width 90px
    height: auto
    +above($breakpoints.sm)
      width 100px
    +above($breakpoints.md)
      width 110px
    +above($breakpoints.xxl)
      width 121px

  &__privacy,
  &__privacy-mobile
    cursor pointer
    text-decoration: underline

  &__privacy-mobile
    color: #01060C
    +above($breakpoints.sm)
      display: none

  &__connection
    display: flex
    flex-direction: column
    align-items: flex-end
    +above($breakpoints.sm)
      flex-basis: 35%

  &__connection-phone
    display: flex
    align-items: center
    gap: 5px
    color: #04292C
    +above($breakpoints.sm)
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__connection-icon
    width 14px
    height: 13px
    fill: #1FA898
    +above($breakpoints.sm)
      width 15px
      height: 14px
    +above($breakpoints.md)
      width 18px
      height: 17px
    +above($breakpoints.xxl)
      width 20px
      height: 19px

  &__call-me
    display: none
    +above($breakpoints.sm)
      display: block
      cursor pointer
      color: $color-g-light
