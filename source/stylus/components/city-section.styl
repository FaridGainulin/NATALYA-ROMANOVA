.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #011D1F

  &__container
    position relative
    z-index 1
    padding 20px 0 10px
    +above($breakpoints.sm)
      padding 30px 0
    +above($breakpoints.md)
      padding 50px 0
    +above($breakpoints.xxl)
      padding 73px 0 84px

  &__title,
  &__sub-title
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__sub-title
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 12px 0 25px
    +above($breakpoints.md)
      padding 15px 0 30px
    +above($breakpoints.xxl)
      padding 17px 0 36px

  &__bottom
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    background-color transparent
    border-radius: 15px
    border: 1px solid $color-g-light
    padding 10px 10px 15px
    +above($breakpoints.sm)
      padding 12px 10px
      border-radius: 20px
      gap: 12px
      width 280px
    +above($breakpoints.md)
      padding 15px 12px
      border-radius: 25px
      gap: 13px
      width 350px
    +above($breakpoints.xxl)
      border-radius: 30px
      gap: 14px
      width 379px
      height: 442px
      padding 15px 14px 16px

  &__bottom-header
    display: flex
    flex-direction: row
    align-items: center
    gap: 10px
    text-align: center
    +above($breakpoints.sm)
      flex-direction: column
      gap: 7px
    +above($breakpoints.md)
      gap: 9px

  &__bottom-img
    width 50px
    height: auto
    +above($breakpoints.sm)
      width 70px
    +above($breakpoints.md)
      width 80px
    +above($breakpoints.xxl)
      width 98px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 6px
    +above($breakpoints.sm)
      gap: 7px
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 9px

  &__img
    width 280px
    height: auto
    margin: 15px 0 0 14px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 508px;
      right: -100px;
      bottom: 53px;
    +above($breakpoints.md)
      width: 712px;
      right: -150px;
      bottom: 40px;
    +above($breakpoints.xxl)
      width 843px
      right: -204px
      bottom: 57px
